{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": false,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"sourceMap": true,
		"strict": true,
		"types": ["vite/client"],
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$static": ["static"],
			"$static/*": ["static/*"],
			"$styles": ["src/styles"],
			"$models": ["src/lib/models"],
			"$assets": ["src/assets"],
			"$assets/*": ["src/assets/*"]
		}
	},
	"include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.ts", "src/**/*.svelte", "src/**/*.css"]
}
